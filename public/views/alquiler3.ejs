<%- include("./partials/head") %>


<body>
    <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <!-- Menu -->
      <%- include("./partials/header") %>
      <!-- / Menu -->

    <!-- Layout container -->
    <div class="layout-page">

      <!-- Content wrapper -->
      <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
          <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Servicios /</span> Alquiler paso 3</h4>

          <div class="row">
            <div class="col-md-12">
              <div class="card mb-4">
                <div class="d-flex align-items-center">
                  <a class="card-header" href="/servicios/alquiler2/<%- id %>">Fecha de alquiler</a> 
                  <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15"><path fill="currentColor" d="M8.293 2.293a1 1 0 0 1 1.414 0l4.5 4.5a1 1 0 0 1 0 1.414l-4.5 4.5a1 1 0 0 1-1.414-1.414L11 8.5H1.5a1 1 0 0 1 0-2H11L8.293 3.707a1 1 0 0 1 0-1.414Z"/></svg>
                  <a class="card-header" href="/servicios/alquiler3/<%- id %>">Opcion de alquiler</a> 
                  <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15"><path fill="currentColor" d="M8.293 2.293a1 1 0 0 1 1.414 0l4.5 4.5a1 1 0 0 1 0 1.414l-4.5 4.5a1 1 0 0 1-1.414-1.414L11 8.5H1.5a1 1 0 0 1 0-2H11L8.293 3.707a1 1 0 0 1 0-1.414Z"/></svg>
                  <a class="card-header" href="/servicios/alquiler4/<%- id %>">Pago</a>
                </div>
                
                <!-- Account -->
                <hr class="my-0" />
                <div class="card-body">
                  <form id="formAccountSettings" method="POST" action="/servicios/alquiler_paso3">
                    <input type="hidden" name="idReserva" value="<%- id %>">
                    <div class="row">
                      <div class="mb-3 col-md-6">
                        <label for="cantidadVueltas" class="form-label">Cantidad de vueltas</label>
                        <input
                          class="form-control"
                          type="text"
                          id="cantidadVueltas"
                          name="cantidadVueltas"
                          value=""
                          autofocus
                        />
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="naftaIncluida" class="form-label">Nafta incluida</label>
                        <select class="form-select" name="naftaIncluida" id="naftaIncluida" aria-label="Default select example">
                          <option selected>Seleccionar..</option>
                          <option value="1">Si</option>
                          <option value="0">No</option>
                        </select>
                      </div>
                      <div class="mb-3 col-md-6">
                        <label class="form-label">Paquete de servicios adicionales</label>
                        <div class="form-check mt-3 ms-3">
                          <input class="form-check-input" type="checkbox" value="1" name="instructorABordo" id="instructorABordo">
                          <label class="form-check-label" for="instructorABordo"> instructor a bordo </label>
                        </div>
                        <div class="form-check ms-3">
                          <input class="form-check-input" type="checkbox" value="1" name="analisisTelemetria"id="analisisTelemetria">
                          <label class="form-check-label" for="analisisTelemetria"> análisis de telemetría </label>
                        </div>
                        <div class="form-check ms-3">
                          <input class="form-check-input" type="checkbox" value="1" name="seguroMedico" id="seguroMedico">
                          <label class="form-check-label" for="seguroMedico"> Seguro premium </label>
                        </div>
                      </div>
                      <div class="mb-3 col-md-6">
                        <label class="form-label">Personalizar compuesto de neumáticos </label>
                        <div class="form-check mt-3 ms-3">
                          <input name="compuestoNeumaticos" class="form-check-input" type="radio" value="blando" id="blando">
                          <label class="form-check-label" for="blando"> blando </label>
                        </div>
                        <div class="form-check ms-3">
                          <input name="compuestoNeumaticos" class="form-check-input" type="radio" value="medio" id="medio">
                          <label class="form-check-label" for="medio"> medio </label>
                        </div>
                        <div class="form-check ms-3">
                          <input name="compuestoNeumaticos" class="form-check-input" type="radio" value="duro" id="duro">
                          <label class="form-check-label" for="duro"> duro </label>
                        </div>
                      </div>
                    <div class="mt-2">
                      <button type="submit" class="btn btn-primary me-2">Continuar</button>
                      <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                    </div>
                  </form>
                </div>
                <!-- /Account -->
              </div>
              <!-- Basic Bootstrap Table -->
              
            <!-- / Content -->
<%- include("./partials/footer") %>