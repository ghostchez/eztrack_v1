<%- include("./partials/head") %>

<body>
    <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <!-- Menu -->
      <%- include("./partials/header") %>
      <!-- / Menu -->

    <!-- Layout container -->
    <div class="layout-page">

      <!-- Content wrapper -->
      <div class="content-wrapper">
        <!-- Content -->

        <div class="container-xxl flex-grow-1 container-p-y">
          <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Usuarios /</span> Personalizar </h4>

          <div class="row">
            <div class="col-md-12">
              <div class="card mb-4">
                <h5 class="card-header">Mis datos de pago</h5>
                <!-- Account -->
                <hr class="my-0" />
                <div class="card-body">
                  <form id="formAccountSettings" method="POST" onsubmit="return false">
                    <div class="row">
                      <div class="mb-3 col-md-6">
                        <label for="address" class="form-label">Direccion</label>
                        <input
                          class="form-control"
                          type="text"
                          id="address"
                          name="address"
                          value=""
                          autofocus
                        />
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="province" class="form-label">Estado/Provincia</label>
                        <input
                          class="form-control"
                          type="text"
                          id="province"
                          name="province"
                          value=""
                          autofocus
                        />
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="dni" class="form-label">Documento de identidad</label>
                        <input class="form-control" type="number" name="dni" id="dni" value="" />
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="email" class="form-label">Email</label>
                        <input
                          class="form-control"
                          type="email"
                          id="email"
                          name="email"
                          value=""
                          placeholder="ejemplo@gmail.com"
                        />
                      </div>
                      
                      <div class="mb-3 col-md-4">
                        <label for="cardOwner" class="form-label">Titular</label>
                        <input
                          class="form-control"
                          type="text"
                          id="cardOwner"
                          name="cardOwner"
                          value=""
                          placeholder="504512345678"
                        />
                      </div>
                      <div class="mb-3 col-md-4">
                        <label for="cardNumber" class="form-label">Numero de tarjeta</label>
                        <input
                          class="form-control"
                          type="number"
                          id="cardNumber"
                          name="cardNumber"
                          value=""
                          placeholder="504512345678"
                        />
                      </div>
                      <div class="mb-3 col-md-2">
                        <label for="cvv" class="form-label">CVV</label>
                        <input
                          class="form-control"
                          type="password"
                          id="cvv"
                          name="cvv"
                          value=""
                          placeholder="123"
                        />
                      </div>
                      <div class="mb-3 col-md-2">
                        <div class="row">
                          <label class="form-label">Vencimiento</label>
                          <div class="col-md-6">
                            <input
                              class="form-control"
                              type="number"
                              id="expireMonth"
                              name="expireMonth"
                              value=""
                              placeholder="01"
                            />
                          </div>
                          <div class="col-6">
                            <input
                              class="form-control"
                              type="number"
                              id="expireYear"
                              name="expireYear"
                              value=""
                              placeholder="26"
                            />
                          </div>
                        </div>
                        
                        
                      </div>
                    </div>
                    <div class="mt-2">
                      <button type="submit" class="btn btn-primary me-2">Guardar</button>
                      <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                    </div>
                  </form>
                </div>
                <!-- /Account -->
              </div>
            <!-- / Content -->

<%- include("./partials/footer") %>
