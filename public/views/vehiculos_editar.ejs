                        <input
                          class="form-control"
                          type="text"
                          id="power"
                          name="power"
                          value="283"
                          placeholder=""
                        />
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="weight" class="form-label">Peso</label>
                        <input
                          type="number"
                          class="form-control"
                          id="weight"
                          name="weight"
                          value="1750"
                        />
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="level" class="form-label">Nivel</label>
                        <input
                          class="form-control"
                          type="number"
                          id="level"
                          name="level"
                          value=""
                          placeholder="3"
